<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--SimpleTabLayout默认属性值 -->
    <style name="SimpleTabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabContentStart">10dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabTextSize">16sp</item>
        <item name="tabMarginLeftAndRight">5sp</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">?android:textColorPrimary</item>
    </style>


</resources>
