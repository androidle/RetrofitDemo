<?xml version="1.0" encoding="utf-8"?>
<!-- 一层一层效果的叠加 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 
    drawable:引用的图片
    fromDegrees：开始旋转的角度
    toDegrees：旋转到的角度
    pivotX、pivotY：相对点
     -->
    <item>
        <rotate
            android:drawable="@mipmap/spinner_big_inner"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="720"
            android:visible="true" >
        </rotate>
    </item>
    <item>
         <rotate
            android:drawable="@mipmap/spinner_big_outer"
            android:fromDegrees="360"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0"
            android:visible="true" >
        </rotate>
    </item>

</layer-list>